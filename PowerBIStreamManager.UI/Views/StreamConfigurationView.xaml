<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PowerBIStreamManager.UI.ViewModels"
             x:Class="PowerBIStreamManager.UI.Views.StreamConfigurationView"
             x:DataType="vm:StreamConfigurationViewModel"
             Padding="10">
    <VerticalStackLayout>
        <Label Text="API Url" />
        <Entry Text="{Binding Uri}" />

        <HorizontalStackLayout HorizontalOptions="End" Margin="5">
            <Button Text="Start" Command="{Binding StartStreamingCommand}" Margin="5" Padding="10,0" IsEnabled="{Binding CanStartStreaming}"/>
            <Button Text="Stop" Command="{Binding StopStreamingCommand}" Margin=" 5" Padding="10,0" IsEnabled="{Binding IsStreaming}"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
